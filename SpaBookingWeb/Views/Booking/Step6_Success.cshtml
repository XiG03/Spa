@model SpaBookingWeb.ViewModels.Client.AppointmentSuccessViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Hoàn tất Đặt lịch";
    var culture = new System.Globalization.CultureInfo("vi-VN");
}

<div class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 flex flex-col items-center justify-center min-h-[70vh]">
    <div class="w-full max-w-2xl animate-fade-in-up">
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-400 mb-6 shadow-sm ring-8 ring-green-50 dark:ring-green-900/10">
                <span class="material-symbols-outlined text-[48px]">check_circle</span>
            </div>
            <h1 class="text-3xl md:text-4xl font-black text-gray-900 dark:text-white mb-3">Đặt lịch thành công!</h1>
            <p class="text-gray-500 text-lg">Cảm ơn bạn đã sử dụng dịch vụ. Mã đặt lịch của bạn là <b>#@Model.AppointmentId</b>.</p>
        </div>

        <div class="bg-white dark:bg-gray-900 rounded-3xl p-6 md:p-8 shadow-xl shadow-pink-100/50 dark:shadow-none border border-pink-100 dark:border-gray-800 relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-1.5 bg-gradient-to-r from-primary to-pink-300"></div>

            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
                        Lotus Spa &amp; Salon
                        <span class="material-symbols-outlined text-primary text-xl">verified</span>
                    </h2>
                    <p class="text-gray-500 text-sm mt-1">123 Đường Nguyễn Huệ, Quận 1</p>
                </div>
                @if (Model.IsDepositPaid)
                {
                    <div class="bg-green-100 text-green-700 px-4 py-1.5 rounded-full text-sm font-bold flex items-center gap-1.5 border border-green-200">
                        <span class="material-symbols-outlined text-[18px]">payments</span>
                        Đã thanh toán cọc
                    </div>
                }
                else
                {
                    <div class="bg-yellow-100 text-yellow-700 px-4 py-1.5 rounded-full text-sm font-bold flex items-center gap-1.5 border border-yellow-200">
                        <span class="material-symbols-outlined text-[18px]">pending</span>
                        Thanh toán tại quầy
                    </div>
                }
            </div>

            <div class="grid md:grid-cols-2 gap-6 mb-8">
                <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-2xl border border-pink-50 dark:border-gray-700">
                    <p class="text-xs font-bold text-primary uppercase tracking-wider mb-2">Thời gian</p>
                    <p class="font-bold text-gray-900 dark:text-white flex items-center gap-2 text-lg">
                        @Model.TimeSlot
                    </p>
                </div>
                <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-2xl border border-pink-50 dark:border-gray-700">
                    <p class="text-xs font-bold text-primary uppercase tracking-wider mb-2">Khách hàng</p>
                    <p class="font-bold text-gray-900 dark:text-white flex items-center gap-2 text-lg">
                        @Model.CustomerName
                    </p>
                </div>
            </div>

            <div class="mb-8">
                <h3 class="text-sm font-bold text-gray-900 dark:text-white mb-5 uppercase tracking-wider border-b border-gray-100 dark:border-gray-800 pb-2">
                    Dịch vụ đã đặt
                </h3>
                <div class="space-y-4">
                    @foreach (var svc in Model.Services)
                    {
                        <div class="flex items-start justify-between group">
                            <div>
                                <p class="font-bold text-gray-900 dark:text-white text-lg leading-tight mb-1">@svc.ServiceName</p>
                                <p class="text-sm text-gray-500 flex items-center gap-1">
                                    <span class="material-symbols-outlined text-[14px]">person</span> @svc.StaffName
                                </p>
                                <p class="text-sm text-gray-500 flex items-center gap-1 mt-0.5">
                                    <span class="material-symbols-outlined text-[14px]">schedule</span> @svc.Duration phút
                                </p>
                            </div>
                            <p class="font-bold text-lg text-gray-900 dark:text-white">@svc.Price.ToString("N0") đ</p>
                        </div>
                    }
                </div>

                <div class="border-t border-dashed border-gray-200 dark:border-gray-700 my-6"></div>

                <div class="space-y-3">
                    <div class="flex justify-between text-sm text-gray-500">
                        <span>Tổng tiền dịch vụ</span>
                        <span>@Model.TotalAmount.ToString("N0") đ</span>
                    </div>
                    @if (Model.IsDepositPaid)
                    {
                        <div class="flex justify-between text-sm text-primary font-medium">
                            <span>Đã đặt cọc (Momo)</span>
                            <span>-@Model.DepositAmount.ToString("N0") đ</span>
                        </div>
                    }
                    <div class="flex justify-between items-center pt-4 mt-2 border-t border-gray-100 dark:border-gray-800">
                        <span class="block text-sm text-gray-500">Cần thanh toán tại Spa</span>
                        <span class="text-3xl font-black text-primary-dark">
                            @((Model.TotalAmount - (Model.IsDepositPaid ? Model.DepositAmount : 0)).ToString("N0")) đ
                        </span>
                    </div>
                </div>
            </div>

            <div class="flex flex-col gap-3">
                <a href="/" class="group w-full bg-primary hover:bg-primary-dark text-white font-bold py-4 px-6 rounded-xl shadow-lg transition-all flex items-center justify-center gap-2 transform active:scale-[0.98]">
                    <span class="material-symbols-outlined">home</span>
                    Về trang chủ
                </a>
            </div>
        </div>

        <p class="text-center text-sm text-gray-500 mt-8 mb-4">
            Cần hỗ trợ? Gọi ngay <span class="font-semibold">1900-123-456</span>
        </p>
    </div>
</div>