@model SpaBookingWeb.ViewModels.Client.PostListViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Tin tức & Sự kiện";
}

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .line-clamp-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<!-- Banner -->
<div class="relative w-full h-[300px] flex items-center justify-center bg-cover bg-center" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://lh3.googleusercontent.com/aida-public/AB6AXuDcFza3h2cyamQGHdHNhShHZnbtimS1qV6GQfPU3fmL2jEcP9iYY6h2D7GeR9ZfD9Qg62bGTGXmOOePiKxMgVRPPUGsw6UHkkBR8JLnB_NRTDIQRR7Lm7SPB7TgaTq29zc_FcVAMgefUgU2dFGg0dZPw2dX2Tj54AVioEzqhlJkalMcPAYHkS2bpTcnINGgeWrmThBXuR53jVfq-m7Zv2b6Rn2Dij-iGPP4zFPlEY9W4w6jMiUoGy2HmCdlzAgq5g5Un-rBb_ABX_0');">
    <div class="text-center text-white z-10 px-4">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog Làm Đẹp & Sức Khỏe</h1>
        <p class="text-lg md:text-xl text-gray-200">Chia sẻ kiến thức, bí quyết và xu hướng mới nhất</p>
    </div>
</div>

<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col lg:flex-row gap-10">
        
        <!-- SIDEBAR -->
        <aside class="w-full lg:w-80 shrink-0 space-y-8">
            <!-- Search -->
            <div class="bg-white dark:bg-[#2f1b25] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-gray-800">
                <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">Tìm kiếm</h3>
                <form method="get" action="/Posts" class="relative">
                    <input type="text" name="search" value="@Model.CurrentSearch" placeholder="Nhập từ khóa..." 
                           class="w-full pl-4 pr-10 py-3 rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 focus:ring-primary focus:border-primary transition-all">
                    <button type="submit" class="absolute right-3 top-3 text-gray-400 hover:text-primary transition-colors">
                        <span class="material-symbols-outlined">search</span>
                    </button>
                </form>
            </div>

            <!-- Categories -->
            <div class="bg-white dark:bg-[#2f1b25] rounded-2xl p-6 shadow-sm border border-gray-100 dark:border-gray-800">
                <h3 class="font-bold text-lg mb-4 text-gray-900 dark:text-white">Danh mục</h3>
                <ul class="space-y-2">
                    <li>
                        <a href="/Posts" class="flex items-center justify-between p-3 rounded-xl transition-colors @(!Model.CurrentCategoryId.HasValue ? "bg-primary text-white" : "hover:bg-gray-50 dark:hover:bg-gray-800 text-gray-700 dark:text-gray-300")">
                            <span>Tất cả</span>
                        </a>
                    </li>
                    @foreach (var cat in Model.Categories)
                    {
                        <li>
                            <a href="/Posts?categoryId=@cat.Id" class="flex items-center justify-between p-3 rounded-xl transition-colors @(cat.IsSelected ? "bg-primary text-white" : "hover:bg-gray-50 dark:hover:bg-gray-800 text-gray-700 dark:text-gray-300")">
                                <span>@cat.Name</span>
                                <span class="text-xs @(cat.IsSelected ? "text-white/80" : "text-gray-400")">(@cat.PostCount)</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </aside>

        <!-- POST LIST -->
        <div class="flex-1">
            @if (Model.Posts.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var post in Model.Posts)
                    {
                        <article class="group bg-white dark:bg-[#2f1b25] rounded-2xl overflow-hidden shadow-sm border border-gray-100 dark:border-gray-800 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                            <a href="/Posts/Detail/@post.Id" class="block relative aspect-video overflow-hidden">
                                <img src="@post.Thumbnail" alt="@post.Title" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                                <div class="absolute top-4 left-4 bg-white/90 dark:bg-black/60 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold text-primary shadow-sm">
                                    @post.CategoryName
                                </div>
                            </a>
                            <div class="p-5 flex flex-col gap-3">
                                <div class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400">
                                    <span class="flex items-center gap-1">
                                        <span class="material-symbols-outlined text-[14px]">calendar_today</span>
                                        @post.PublishedDateStr
                                    </span>
                                    <span>•</span>
                                    <span>@post.AuthorName</span>
                                </div>
                                <h3 class="text-lg font-bold text-gray-900 dark:text-white line-clamp-2 group-hover:text-primary transition-colors">
                                    <a href="/Posts/Detail/@post.Id">@post.Title</a>
                                </h3>
                                <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-3">
                                    @post.Summary
                                </p>
                                <div class="pt-3 mt-auto">
                                    <a href="/Posts/Detail/@post.Id" class="inline-flex items-center text-sm font-bold text-primary hover:underline gap-1">
                                        Đọc tiếp <span class="material-symbols-outlined text-sm">arrow_forward</span>
                                    </a>
                                </div>
                            </div>
                        </article>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="flex justify-center mt-10">
                        <div class="flex items-center gap-2">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <a href="/Posts?page=@i&categoryId=@Model.CurrentCategoryId&search=@Model.CurrentSearch" 
                                   class="w-10 h-10 flex items-center justify-center rounded-lg transition-colors @(i == Model.CurrentPage ? "bg-primary text-white font-bold" : "bg-white border border-gray-200 hover:border-primary hover:text-primary text-gray-700")">
                                    @i
                                </a>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="flex flex-col items-center justify-center py-20 text-center">
                    <span class="material-symbols-outlined text-6xl text-gray-300 mb-4">article</span>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">Không tìm thấy bài viết nào</h3>
                    <p class="text-gray-500">Thử tìm kiếm với từ khóa khác hoặc chọn danh mục khác.</p>
                </div>
            }
        </div>
    </div>
</div>