@model SpaBookingWeb.ViewModels.Client.ClientHomeViewModel

@{
  Layout = null; // Tắt layout mặc định để dùng full HTML cấu trúc của bạn
}

<!DOCTYPE html>
<html class="light" lang="vi">

<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>@Model.SpaName - Trang chủ</title>
  <link href="https://fonts.googleapis.com" rel="preconnect" />
  <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&amp;family=Noto+Sans:wght@400;500;700;900&amp;display=swap"
    rel="stylesheet" />
  <link
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap"
    rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  <script id="tailwind-config">
    tailwind.config = {
      darkMode: "class",
      theme: {
        extend: {
          colors: {
            "primary": "#ec4899", // Pink 500
            "primary-dark": "#be185d", // Pink 700
            "background-light": "#fff1f2", // Rose 50
            "background-dark": "#2a0a12", // Dark Rose/Brown
          },
          fontFamily: {
            "display": ["Inter", "sans-serif"],
            "body": ["Noto Sans", "sans-serif"],
          },
          borderRadius: {
            "DEFAULT": "0.5rem",
            "lg": "1rem",
            "xl": "1.5rem",
            "full": "9999px"
          },
        },
      },
    }
  </script>
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }

    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }

    .no-scrollbar {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  </style>
</head>

<body class="bg-background-light dark:bg-background-dark text-gray-900 dark:text-white">
  <div class="relative flex h-auto min-h-screen w-full flex-col overflow-x-hidden">
    <div
      class="layout-container flex w-full flex-col bg-white dark:bg-background-dark border-b border-pink-100 dark:border-pink-900 sticky top-0 z-50">
      <header
        class="flex items-center justify-between whitespace-nowrap px-4 py-3 md:px-10 lg:px-40 max-w-[1440px] mx-auto w-full">
        <div class="flex items-center gap-4 text-gray-900 dark:text-white">
          <div
            class="flex items-center gap-4 text-text-main dark:text-white cursor-pointer hover:opacity-80 transition-opacity">
            <span class="material-symbols-outlined text-primary text-3xl">spa</span>
            <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">@Model.SpaName</h2>
          </div>
        </div>
        <div class="hidden md:flex flex-1 justify-end gap-8 items-center">
          <div class="flex items-center gap-6 lg:gap-9">
            <a class="text-gray-900 dark:text-gray-200 text-sm font-medium leading-normal hover:text-primary transition-colors"
              asp-area="" asp-controller="Services" asp-action="Index">Dịch vụ</a>
            <a class="text-gray-900 dark:text-gray-200 text-sm font-medium leading-normal hover:text-primary transition-colors"
              href="#">Combo</a>
            <a class="text-gray-900 dark:text-gray-200 text-sm font-medium leading-normal hover:text-primary transition-colors"
              href="#">Về chúng tôi</a>
            <a class="text-gray-900 dark:text-gray-200 text-sm font-medium leading-normal hover:text-primary transition-colors"
              href="#">Liên hệ</a>
          </div>
          <button
            class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded-xl h-10 px-6 bg-primary text-white text-sm font-bold leading-normal tracking-[0.015em] hover:bg-primary-dark transition-colors shadow-md shadow-pink-200 dark:shadow-none">
            <a class="truncate" asp-area="" asp-controller="Booking" asp-action="Index">Đặt lịch ngay</a>
          </button>
        </div>
        <div class="flex md:hidden items-center">
          <span class="material-symbols-outlined text-gray-900 dark:text-white">menu</span>
        </div>
      </header>
    </div>

    <!-- MAIN CONTENT GIỮ NGUYÊN (Banner, Category, Combo, Services, Promotion...) -->
    <div class="w-full bg-white dark:bg-background-dark">
      <div class="@@container">
        <div
          class="flex flex-col gap-6 bg-cover bg-center bg-no-repeat min-h-[500px] items-center justify-center p-4 relative"
          data-alt="Soft focused background of a clean modern spa interior with plants and light wood"
          style='background-image: linear-gradient(rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.5) 100%), url("https://lh3.googleusercontent.com/aida-public/AB6AXuBah--uzECHgzqH6TD1Aif-ujE-HHWkcm1zqmjFNQJZ4cax3UU27IddG_Q1jo1FRUmTfso6NJti1XNiM5uWS9vb2_CfJXRwuAkZMmqS7BMSL_TIDinnjoQhd9ibQ5aIlKY12VgKj-ijD-gNJkZCDk-JyLggETZgItrPxoWaI11fdpEzvkw5RHDMM6hcFqXKB1I1muWDErY88n6BcqyCIJz58oPfOj7mX8byVku1WkBSK2kBzKReZDlN6f587NLJ02it9adbgEl96LQ");'>
          <div class="flex flex-col gap-6 text-center z-10 max-w-[800px] items-center">
            <span
              class="text-white bg-primary/80 backdrop-blur-sm px-3 py-1 rounded-full font-bold tracking-wider uppercase text-xs md:text-sm shadow-sm">Vẻ
              đẹp &amp; Thư giãn</span>
            <h1 class="text-white text-4xl font-black leading-tight tracking-[-0.033em] md:text-6xl drop-shadow-md">
              Chăm sóc bản thân với dịch vụ đẳng cấp 5 sao
            </h1>
            <h2 class="text-pink-50 text-base font-medium leading-normal md:text-xl drop-shadow-sm max-w-2xl">
              Khám phá các liệu trình độc quyền và combo ưu đãi dành riêng cho bạn tại @Model.SpaName.
            </h2>
            <div class="mt-4 flex gap-4">
              <button
                class="h-12 md:h-14 px-8 bg-primary rounded-full text-white font-bold text-base hover:bg-primary-dark transition-all flex items-center justify-center gap-2 shadow-lg shadow-pink-500/30 hover:scale-105 transform duration-200">
                <a asp-area="" asp-controller="Services" asp-action="Index">Xem dịch vụ</a>
              </button>
              <button
                class="h-12 md:h-14 px-8 bg-white/20 backdrop-blur-md border border-white/40 rounded-full text-white font-bold text-base hover:bg-white/30 transition-all flex items-center justify-center gap-2">
                <span>Liên hệ tư vấn</span>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-1 justify-center py-10 px-4 md:px-10 lg:px-40 bg-background-light dark:bg-background-dark">
        <div class="flex flex-col max-w-[1200px] flex-1 gap-12">

          <!-- DANH MỤC DỊCH VỤ -->
          <section>
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-gray-900 dark:text-white text-[22px] font-bold leading-tight tracking-[-0.015em]">Danh mục
                dịch vụ</h2>
              <a class="text-sm font-medium text-pink-600 dark:text-primary hover:underline" asp-area=""
                asp-controller="Services" asp-action="Index">Xem tất cả</a>
            </div>
            <div class="flex overflow-x-auto no-scrollbar gap-4 md:gap-8 pb-4 -mx-4 px-4 md:mx-0 md:px-0">
              @foreach (var cat in Model.Categories)
              {
                <div class="flex flex-col items-center gap-3 min-w-[80px] cursor-pointer group">
                  <div
                    class="w-20 h-20 md:w-24 md:h-24 rounded-full bg-cover bg-center shadow-md group-hover:scale-105 transition-transform duration-300 border-2 border-transparent group-hover:border-primary"
                    data-alt="@cat.CategoryName" style='background-image: url("@cat.IconUrl");'>
                  </div>
                  <p
                    class="text-gray-900 dark:text-gray-200 text-sm font-medium text-center group-hover:text-primary transition-colors">
                    @cat.CategoryName</p>
                </div>
              }
            </div>
          </section>

          <!-- COMBO NỔI BẬT -->
          <section>
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-gray-900 dark:text-white text-[22px] font-bold leading-tight tracking-[-0.015em]">Combo
                &amp; Gói Dịch Vụ Nổi Bật</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              @foreach (var combo in Model.FeaturedCombos)
              {
                <div
                  class="flex flex-col gap-4 group cursor-pointer bg-white dark:bg-[#3d101c] p-4 rounded-2xl shadow-sm hover:shadow-xl hover:shadow-pink-100 dark:hover:shadow-none transition-shadow border border-pink-100 dark:border-pink-900">
                  <div class="relative w-full aspect-[4/3] overflow-hidden rounded-xl bg-gray-100">
                    <div
                      class="absolute inset-0 bg-cover bg-center group-hover:scale-105 transition-transform duration-500"
                      style='background-image: url("@combo.ImageUrl");'>
                    </div>
                    @if (combo.IsBestSeller)
                    {
                      <div
                        class="absolute top-3 left-3 bg-primary text-white px-3 py-1 rounded-lg text-xs font-bold shadow-sm uppercase tracking-wide">
                        Bestseller
                      </div>
                    }
                  </div>
                  <div class="flex flex-col gap-1">
                    <h3
                      class="text-gray-900 dark:text-white text-lg font-bold group-hover:text-primary transition-colors">
                      @combo.ComboName</h3>
                    <p class="text-gray-500 dark:text-gray-400 text-sm line-clamp-1">@combo.Description</p>
                    <div class="flex items-center gap-3 mt-2">
                      <span
                        class="inline-flex items-center gap-1 bg-pink-50 dark:bg-pink-900/30 px-2 py-1 rounded text-xs font-medium text-pink-700 dark:text-pink-300">
                        <span class="material-symbols-outlined text-[14px]">schedule</span> @combo.DurationMinutes phút
                      </span>
                      <span class="text-primary font-bold text-lg">@combo.Price.ToString("N0")₫</span>
                      @if (combo.OriginalPrice > combo.Price)
                      {
                        <span class="text-gray-400 text-sm line-through">@combo.OriginalPrice.ToString("N0")₫</span>
                      }
                    </div>
                  </div>
                  <div class="mt-2 pt-3 border-t border-pink-100 dark:border-pink-900 flex items-center justify-between">
                    <div class="flex flex-col">
                      <span class="text-xs text-gray-500 dark:text-gray-400">Trạng thái</span>
                      <span class="text-sm font-semibold text-green-600 dark:text-green-400">@combo.StatusText</span>
                    </div>
                    <button
                      class="bg-primary/10 hover:bg-primary text-primary hover:text-white text-sm font-bold py-2 px-4 rounded-lg transition-colors">
                      Đặt ngay
                    </button>
                  </div>
                </div>
              }
            </div>
          </section>

          <!-- DỊCH VỤ NỔI BẬT -->
          <section>
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-gray-900 dark:text-white text-[22px] font-bold leading-tight tracking-[-0.015em]">Dịch vụ
                được yêu thích</h2>
              <a class="text-sm font-medium text-pink-600 dark:text-primary hover:underline" asp-area=""
                asp-controller="Services" asp-action="Index">Xem bảng giá</a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              @foreach (var svc in Model.FeaturedServices)
              {
                <div class="flex flex-col gap-3 group cursor-pointer">
                  <div class="relative w-full aspect-square overflow-hidden rounded-xl bg-gray-100">
                    <div
                      class="absolute inset-0 bg-cover bg-center group-hover:scale-105 transition-transform duration-500"
                      style='background-image: url("@svc.ImageUrl");'>
                    </div>
                    <div
                      class="absolute top-2 right-2 bg-white/90 dark:bg-black/50 backdrop-blur-sm px-1.5 py-0.5 rounded flex items-center gap-0.5">
                      <span class="material-symbols-outlined text-yellow-500 text-[14px] filled">star</span>
                      <span class="text-[10px] font-bold dark:text-white">@svc.Rating</span>
                    </div>
                  </div>
                  <div>
                    <h3
                      class="text-gray-900 dark:text-white text-base font-bold truncate group-hover:text-primary transition-colors">
                      @svc.ServiceName</h3>
                    <p class="text-gray-500 dark:text-gray-400 text-xs">@svc.CategoryName • @svc.Price.ToString("N0")₫</p>
                  </div>
                </div>
              }
            </div>
          </section>

          <!-- ƯU ĐÃI ĐẶC BIỆT -->
          <section class="mt-8">
            <div
              class="relative w-full rounded-2xl overflow-hidden bg-[#831843] text-white flex flex-col md:flex-row items-center justify-between p-8 md:p-12 gap-8">
              <div class="flex flex-col gap-4 z-10 max-w-lg">
                <span class="text-pink-300 font-bold tracking-wider uppercase text-sm">Ưu đãi đặc biệt</span>
                <h2 class="text-3xl font-black tracking-tight">@Model.CurrentPromotion.Title</h2>
                <p class="text-pink-100">Nhập mã <span
                    class="text-[#831843] font-bold bg-white px-2 py-0.5 rounded">@Model.CurrentPromotion.PromoCode</span>
                  @Model.CurrentPromotion.Description</p>
                <div class="flex gap-4 pt-2">
                  <button
                    class="bg-primary hover:bg-primary-dark text-white font-bold py-3 px-6 rounded-xl transition-colors shadow-lg">
                    <a asp-area="" asp-controller="Booking" asp-action="Index">Đặt lịch ngay</a>
                  </button>
                  <button
                    class="bg-transparent border border-pink-300 hover:border-white text-white font-bold py-3 px-6 rounded-xl transition-colors">
                    Xem chi tiết
                  </button>
                </div>
              </div>
              <div
                class="absolute right-0 top-0 bottom-0 w-full md:w-1/2 opacity-30 bg-cover bg-center pointer-events-none"
                style='background-image: url("@Model.CurrentPromotion.BackgroundImage"); mask-image: linear-gradient(to right, transparent, black); -webkit-mask-image: linear-gradient(to right, transparent, black);'>
              </div>
            </div>
          </section>
        </div>
      </div>

      <!-- FOOTER -->
      <footer
        class="bg-white dark:bg-background-dark border-t border-pink-100 dark:border-pink-900 pt-12 pb-8 px-4 md:px-10 lg:px-40">
        <div class="max-w-[1440px] mx-auto flex flex-col gap-8">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-8">
            <div class="flex flex-col gap-4">
              <h4 class="font-bold text-gray-900 dark:text-white">@Model.SpaName</h4>
              <p class="text-sm text-text-muted dark:text-gray-400">
                @Model.Address
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Mang đến vẻ đẹp và sự tự tin cho bạn mỗi ngày với các dịch vụ chuyên nghiệp nhất.
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Hotline: @Model.Hotline
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Email: @Model.Email
              </p>
            </div>
            <div class="flex flex-col gap-4">
              <h4 class="font-bold text-gray-900 dark:text-white">Dịch vụ</h4>
              <a class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors" href="#">Chăm sóc
                tóc</a>
              <a class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors" href="#">Spa
                &amp; Massage</a>
              <a class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors" href="#">Làm móng
                nghệ thuật</a>
              <a class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors" href="#">Trang
                điểm dự tiệc</a>
            </div>
            <div class="flex flex-col gap-4">
              <h4 class="font-bold text-gray-900 dark:text-white">Hỗ trợ</h4>
              <a class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors" href="#">Bảng
                giá</a>
              <a class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors" href="#">Liên
                hệ</a>
              <a class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors" href="#">Chính
                sách bảo mật</a>
              <a class="text-sm text-gray-500 dark:text-gray-400 hover:text-primary transition-colors" href="#">Điều
                khoản sử dụng</a>
            </div>
            <!-- CẬP NHẬT GIỜ MỞ CỬA TỪ DATABASE -->
            <div class="flex flex-col gap-4">
              <h4 class="font-bold text-gray-900 dark:text-white">Giờ mở cửa</h4>
              <p class="text-sm text-gray-500 dark:text-gray-400">Thứ 2 - Thứ 6: @Model.OpenTime - @Model.CloseTime</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">Thứ 7 - CN: @Model.OpenTime - @Model.CloseTime</p>
            </div>
          </div>
          <div
            class="flex flex-col md:flex-row items-center justify-between border-t border-pink-100 dark:border-pink-900 pt-8 gap-4">
            <div class="flex items-center gap-2 text-gray-900 dark:text-white">
              <div class="flex items-center gap-4 text-gray-900 dark:text-white">
                <div
                  class="flex items-center gap-4 text-text-main dark:text-white cursor-pointer hover:opacity-80 transition-opacity">
                  <span class="material-symbols-outlined text-primary text-3xl">spa</span>
                  <h2 class="text-lg font-bold leading-tight tracking-[-0.015em]">@Model.SpaName</h2>
                </div>
              </div>
              <span class="text-sm text-gray-500 dark:text-gray-500 ml-2">© 2024 @Model.SpaName Inc.</span>
            </div>
            <!-- CẬP NHẬT LINK FACEBOOK TỪ DATABASE -->
            <div class="flex gap-4">
              <a class="text-gray-400 dark:text-gray-400 hover:text-primary transition-colors" href="@Model.FacebookUrl"
                target="_blank">
                <span class="sr-only">Facebook</span>
                <svg aria-hidden="true" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path clip-rule="evenodd"
                    d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                    fill-rule="evenodd"></path>
                </svg>
              </a>
              <a class="text-gray-400 dark:text-gray-400 hover:text-primary transition-colors" href="#">
                <span class="sr-only">Instagram</span>
                <svg aria-hidden="true" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path clip-rule="evenodd"
                    d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772 4.902 4.902 0 011.772-1.153c.636-.247 1.363-.416 2.427-.465 1.067-.047 1.409-.06 3.809-.06h.63zm1.673 5.381c-1.112 0-2.029.916-2.029 2.028 0 1.113.917 2.029 2.029 2.029 1.113 0 2.028-.916 2.028-2.029 0-1.112-.915-2.028-2.028-2.028zm-4.368 4.143h-2.92v2.92h2.92v-2.92z"
                    fill-rule="evenodd"></path>
                </svg>
              </a>
              <a class="text-gray-400 dark:text-gray-400 hover:text-primary transition-colors" href="#">
                <span class="sr-only">Twitter</span>
                <svg aria-hidden="true" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84">
                  </path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>
</body>

</html>