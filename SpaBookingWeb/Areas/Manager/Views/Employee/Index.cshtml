@model List<SpaBookingWeb.ViewModels.Manager.EmployeeListViewModel>

@{
    ViewData["Title"] = "Quản lý Nhân viên";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 page-title">Danh sách Nhân viên</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="fe fe-plus mr-2"></i>Thêm nhân viên</a>
    </div>

    <!-- Danh sách -->
    <div class="row">
        @foreach (var emp in Model)
        {
            <div class="col-md-3">
                <div class="card shadow mb-4">
                    <div class="card-body text-center">
                        <div class="avatar avatar-lg mt-4">
                            <img src="@emp.Avatar" alt="..." class="avatar-img rounded-circle">
                        </div>
                        <div class="card-text my-2">
                            <strong class="card-title my-0">@emp.FullName</strong>
                            <p class="small text-muted mb-0">@emp.Position</p>
                            <p class="small"><span class="badge badge-light text-muted">@emp.Email</span></p>
                        </div>
                    </div> <!-- ./card-text -->
                    <div class="card-footer">
                        <div class="row align-items-center justify-content-between">
                            <div class="col-auto">
                                <small>
                                    <span class="text-warning"><i class="fe fe-star"></i> @emp.AverageRating</span>
                                    <span class="text-muted">(@emp.TotalAppointments booking)</span>
                                </small>
                            </div>
                            <div class="col-auto">
                                <div class="file-action">
                                    <button type="button" class="btn btn-link dropdown-toggle more-vertical p-0 text-muted mx-auto" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="text-muted sr-only">Action</span>
                                    </button>
                                    <div class="dropdown-menu m-2">
                                        <a class="dropdown-item" href="#"><i class="fe fe-edit-3 fe-12 mr-4"></i>Sửa</a>
                                        <a class="dropdown-item" href="#"><i class="fe fe-delete fe-12 mr-4"></i>Xóa</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- /.card-footer -->
                </div>
            </div>
        }
    </div>
</div>