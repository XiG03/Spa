@model SpaBookingWeb.ViewModels.Manager.EmployeeViewModel

@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Thêm nhân viên mới</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <h6 class="heading-small text-muted mb-4">Thông tin tài khoản & Cá nhân</h6>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FullName" class="control-label">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên đầy đủ" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email (Tên đăng nhập) <span class="text-danger">*</span></label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="email@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label">Giới tính</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="Nữ">Nữ</option>
                                <option value="Nam">Nam</option>
                                <option value="Khác">Khác</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="control-label">Ngày sinh</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">Địa chỉ</label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                </div>

                <hr class="my-4" />
                <h6 class="heading-small text-muted mb-4">Thông tin công việc</h6>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BaseSalary" class="control-label">Lương cơ bản (VND)</label>
                            <input asp-for="BaseSalary" class="form-control" type="number" />
                            <span asp-validation-for="BaseSalary" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="HireDate" class="control-label">Ngày vào làm</label>
                            <input asp-for="HireDate" class="form-control" type="date" />
                        </div>
                    </div>
                </div>

                <!-- ROLE SELECTION -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SelectedRoleId" class="control-label font-weight-bold">Vai trò trong hệ thống</label>
                            <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-control" id="RoleSelect">
                                <option value="">-- Chọn vai trò --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- SERVICES SELECTION (Hidden by default, shown via JS) -->
                <div class="form-group mt-3" id="ServiceSelectionArea" style="display:none;">
                    <label class="control-label font-weight-bold">Chọn dịch vụ kỹ thuật viên có thể thực hiện:</label>
                    <div class="card p-3 bg-light">
                        <div class="row">
                            @foreach (var service in Model.Services)
                            {
                                <div class="col-md-4">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" 
                                               name="SelectedServiceIds" 
                                               value="@service.Value" 
                                               id="srv_@service.Value"
                                               @(Model.SelectedServiceIds.Contains(int.Parse(service.Value)) ? "checked" : "")>
                                        <label class="custom-control-label" for="srv_@service.Value">@service.Text</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary px-4">Lưu nhân viên</button>
                    <a asp-action="Index" class="btn btn-light ml-2">Hủy bỏ</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            function toggleServices() {
                var selectedText = $("#RoleSelect option:selected").text().toLowerCase();
                // Kiểm tra nếu role chứa chữ "technician" hoặc "kỹ thuật viên"
                if (selectedText.includes("technician") || selectedText.includes("kỹ thuật viên")) {
                    $("#ServiceSelectionArea").slideDown();
                } else {
                    $("#ServiceSelectionArea").slideUp();
                }
            }

            // Gọi khi trang load (phòng trường hợp form load lại do lỗi validate)
            toggleServices();

            // Gọi khi dropdown thay đổi
            $("#RoleSelect").change(function() {
                toggleServices();
            });
        });
    </script>
}