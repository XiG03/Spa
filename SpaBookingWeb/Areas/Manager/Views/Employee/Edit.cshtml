@model SpaBookingWeb.ViewModels.Manager.EmployeeViewModel

@{
    ViewData["Title"] = "Sửa nhân viên";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Cập nhật nhân viên</h1>
        <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">Quay lại</a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="EmployeeId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FullName" class="control-label">Họ tên</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label">Giới tính</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="Nữ">Nữ</option>
                                <option value="Nam">Nam</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                         <div class="form-group">
                            <label asp-for="DateOfBirth" class="control-label">Ngày sinh</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label">Địa chỉ</label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                </div>

                <div class="row">
                    <div class="col-md-6">
                         <div class="form-group">
                            <label asp-for="BaseSalary" class="control-label">Lương cơ bản</label>
                            <input asp-for="BaseSalary" class="form-control" type="number" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group pt-4">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsActive" id="switchActive">
                                <label class="custom-control-label" for="switchActive">Đang làm việc (Active)</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ROLE SELECTION -->
                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SelectedRoleId" class="control-label font-weight-bold">Vai trò hệ thống</label>
                            <select asp-for="SelectedRoleId" asp-items="Model.Roles" class="form-control" id="RoleSelect">
                                <option value="">-- Chọn vai trò --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- SERVICES SELECTION -->
                <div class="form-group mt-3" id="ServiceSelectionArea" style="display:none;">
                    <label class="control-label font-weight-bold">Dịch vụ kỹ thuật viên đảm nhận:</label>
                    <div class="card p-3 bg-light">
                        <div class="row">
                            @if(Model.Services != null)
                            {
                                foreach (var service in Model.Services)
                                {
                                    <div class="col-md-4">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" 
                                                   name="SelectedServiceIds" 
                                                   value="@service.Value" 
                                                   id="srv_@service.Value"
                                                   @(Model.SelectedServiceIds.Contains(int.Parse(service.Value)) ? "checked" : "")>
                                            <label class="custom-control-label" for="srv_@service.Value">@service.Text</label>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-warning px-4">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            function toggleServices() {
                var selectedText = $("#RoleSelect option:selected").text().toLowerCase();
                if (selectedText.includes("technician") || selectedText.includes("kỹ thuật viên")) {
                    $("#ServiceSelectionArea").slideDown();
                } else {
                    $("#ServiceSelectionArea").slideUp();
                }
            }
            toggleServices();
            $("#RoleSelect").change(function() {
                toggleServices();
            });
        });
    </script>
}