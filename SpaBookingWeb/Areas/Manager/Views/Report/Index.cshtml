@model SpaBookingWeb.ViewModels.Manager.RevenueReportViewModel

@{
    ViewData["Title"] = "Báo Cáo Doanh Thu";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

    <!-- Tiêu đề và nút Xuất Excel -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Báo Cáo Doanh Thu Tháng @DateTime.Now.Month</h1>
        <a asp-action="ExportRevenueReport" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
            <i class="fas fa-file-excel fa-sm text-white-50 mr-1"></i> Xuất Báo Cáo Excel
        </a>
    </div>

    <!-- Hàng thống kê tổng quan -->
    <div class="row">

        <!-- Doanh Thu Tháng Này -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Doanh thu tháng này</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CurrentRevenue.ToString("#,##0") VNĐ</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <!-- So sánh -->
                    <div class="mt-2 text-xs">
                        @if (Model.RevenueGrowth >= 0)
                        {
                            <span class="text-success mr-2"><i class="fas fa-arrow-up"></i> @Model.RevenueGrowth.ToString("0.0")%</span>
                        }
                        else
                        {
                            <span class="text-danger mr-2"><i class="fas fa-arrow-down"></i> @Model.RevenueGrowth.ToString("0.0")%</span>
                        }
                        <span>So với tháng trước</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Số Đơn Hàng -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tổng đơn hàng</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CurrentOrders</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                     <div class="mt-2 text-xs">
                         <span class="@(Model.OrderGrowth >= 0 ? "text-success" : "text-danger") mr-2">
                             @(Model.OrderGrowth >= 0 ? "+" : "")@Model.OrderGrowth.ToString("0.0")%
                         </span>
                         <span>So với tháng trước (@Model.LastMonthOrders đơn)</span>
                     </div>
                </div>
            </div>
        </div>

        <!-- Giá Trị Trung Bình Đơn (AOV) -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Giá trị TB/Đơn</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AverageOrderValue.ToString("#,##0") VNĐ</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sản Phẩm Bán Ra -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Sản phẩm bán ra</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ProductsSold</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-box-open fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Sản Phẩm (Ví dụ thêm) -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Top Sản Phẩm Bán Chạy</h6>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.TopProducts)
                    {
                        <div class="mb-3">
                            <h4 class="small font-weight-bold">@item.ProductName <span class="float-right">@item.Quantity đã bán</span></h4>
                            <div class="progress mb-4">
                                <!-- Thanh progress bar giả lập % -->
                                <div class="progress-bar bg-info" role="progressbar" style="width: @(item.Quantity)%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
