@model SpaBookingWeb.ViewModels.Manager.PermissionViewModel
@using SpaBookingWeb.Constants

@{
    ViewData["Title"] = "Phân quyền - " + Model.RoleName;
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
    
    // Gom nhóm các quyền theo Module để hiển thị đẹp hơn
    // Key: Tên Module (Products, Orders...), Value: List các RoleClaim thuộc module đó
    var groupedClaims = Model.RoleClaims
        .GroupBy(c => Permissions.GetModuleFromClaim(c.Value))
        .ToDictionary(g => g.Key, g => g.ToList());
}

<div class="container-fluid">
    <form asp-action="ManagePermissions" method="post">
        <input type="hidden" asp-for="RoleId" />
        <input type="hidden" asp-for="RoleName" />

        <!-- Header -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Phân quyền: <span class="text-primary">@Model.RoleName</span></h1>
            <div>
                <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm mr-2">
                    <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary btn-sm shadow-sm">
                    <i class="fas fa-save fa-sm text-white-50"></i> Lưu thay đổi
                </button>
            </div>
        </div>

        <!-- Hiển thị Grid các Module -->
        <div class="row">
            @foreach (var group in groupedClaims)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header py-3 bg-light border-bottom-primary">
                            <h6 class="m-0 font-weight-bold text-primary text-uppercase">
                                <i class="fas fa-cube mr-2"></i> Quản lý @group.Key
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-borderless">
                                    <tbody>
                                        @for (int i = 0; i < group.Value.Count; i++)
                                        {
                                            // Tìm index thực trong list gốc Model.RoleClaims để binding đúng
                                            var actualIndex = Model.RoleClaims.IndexOf(group.Value[i]);
                                            
                                            <tr>
                                                <td style="width: 40px;">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input" 
                                                               asp-for="@Model.RoleClaims[actualIndex].IsSelected" 
                                                               id="customSwitch_@actualIndex">
                                                        <label class="custom-control-label" for="customSwitch_@actualIndex"></label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <!-- Hiển thị tên hành động thân thiện hơn -->
                                                    @if (Model.RoleClaims[actualIndex].Value.EndsWith(".View"))
                                                    {
                                                        <span class="badge badge-info"><i class="fas fa-eye"></i> Xem</span>
                                                    }
                                                    else if (Model.RoleClaims[actualIndex].Value.EndsWith(".Create"))
                                                    {
                                                        <span class="badge badge-success"><i class="fas fa-plus"></i> Thêm mới</span>
                                                    }
                                                    else if (Model.RoleClaims[actualIndex].Value.EndsWith(".Edit"))
                                                    {
                                                        <span class="badge badge-warning text-white"><i class="fas fa-edit"></i> Sửa</span>
                                                    }
                                                    else if (Model.RoleClaims[actualIndex].Value.EndsWith(".Delete"))
                                                    {
                                                        <span class="badge badge-danger"><i class="fas fa-trash"></i> Xóa</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Khác</span>
                                                    }
                                                    
                                                    <small class="text-muted ml-2">(@Model.RoleClaims[actualIndex].Value)</small>
                                                    
                                                    <!-- Hidden Inputs bắt buộc cho Model Binding -->
                                                    <input type="hidden" asp-for="@Model.RoleClaims[actualIndex].Type" />
                                                    <input type="hidden" asp-for="@Model.RoleClaims[actualIndex].Value" />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
</div>