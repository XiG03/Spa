@model SpaBookingWeb.ViewModels.Manager.ProductDashboardViewModel

@{
    ViewData["Title"] = "Quản lý Kho Sản phẩm";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="page-title mb-0">Kho Sản phẩm</h2>
                    <p class="text-muted mb-0">Quản lý nhập xuất, tồn kho và định mức tiêu hao.</p>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fe fe-plus-circle mr-2"></i>Thêm Sản phẩm
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fe fe-check-circle mr-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="card shadow">
                <div class="card-body">
                    <table class="table table-hover datatables" id="dataTable-1">
                        <thead class="thead-light">
                            <tr>
                                <th>#ID</th>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục & Đơn vị</th>
                                <th>Giá nhập / Bán</th>
                                <th class="text-center">Tồn kho</th>
                                <th class="text-center" title="Số lượng đã dùng trong dịch vụ">Đã dùng (DV)</th>
                                <th>Dùng nhiều nhất bởi</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td>
                                        <strong>@item.ProductName</strong>
                                    </td>
                                    <td>
                                        <span class="badge badge-light">@item.CategoryName</span>
                                        <small class="text-muted d-block mt-1">Đơn vị: @item.UnitName</small>
                                    </td>
                                    <td>
                                        <div class="small">Nhập: @item.PurchasePrice.ToString("N0") đ</div>
                                        <div class="small text-success font-weight-bold">Bán: @item.SalePrice.ToString("N0") đ</div>
                                    </td>
                                    <td class="text-center">
                                        @if(item.StockQuantity <= 10)
                                        {
                                            <span class="text-danger font-weight-bold" title="Sắp hết hàng!">
                                                <i class="fe fe-alert-circle mr-1"></i>@item.StockQuantity
                                            </span>
                                        } 
                                        else 
                                        {
                                            <span class="text-primary font-weight-bold">@item.StockQuantity</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if(item.UsedInServiceCount > 0)
                                        {
                                            <span class="badge badge-pill badge-warning text-dark">@item.UsedInServiceCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if(item.TopServiceUsage != "Chưa sử dụng")
                                        {
                                            <span class="small text-info">
                                                <i class="fe fe-trending-up mr-1"></i>@item.TopServiceUsage
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small font-italic">Chưa có dữ liệu</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsForSale)
                                        {
                                            <span class="badge badge-success">Đang bán lẻ</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Nội bộ</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                <span class="text-muted sr-only">Thao tác</span>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.ProductId">
                                                    <i class="fe fe-edit-2 mr-2"></i>Sửa
                                                </a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.ProductId">
                                                    <i class="fe fe-trash-2 mr-2"></i>Xóa
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>