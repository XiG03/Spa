@model SpaBookingWeb.ViewModels.Manager.ProductViewModel

@{
    ViewData["Title"] = "Cập nhật Sản phẩm";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <h2 class="h3 mb-4 page-title">Cập nhật Sản phẩm</h2>
            <div class="card shadow mb-4">
                <div class="card-header">
                    <strong class="card-title">Thông tin sản phẩm #@Model.ProductId</strong>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Hidden field quan trọng để giữ ID sản phẩm -->
                        <input type="hidden" asp-for="ProductId" />

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="ProductName" class="control-label">Tên sản phẩm <span class="text-danger">*</span></label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="CategoryId" class="control-label">Danh mục</label>
                                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label asp-for="UnitId" class="control-label">Đơn vị tính</label>
                                <select asp-for="UnitId" asp-items="Model.Units" class="form-control">
                                    <option value="">-- Chọn đơn vị --</option>
                                </select>
                                <span asp-validation-for="UnitId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label asp-for="PurchasePrice" class="control-label">Giá nhập (VNĐ) <span class="text-danger">*</span></label>
                                <input asp-for="PurchasePrice" class="form-control" type="number" />
                                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="SalePrice" class="control-label">Giá bán (VNĐ) <span class="text-danger">*</span></label>
                                <input asp-for="SalePrice" class="form-control" type="number" />
                                <span asp-validation-for="SalePrice" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="StockQuantity" class="control-label">Số lượng tồn kho <span class="text-danger">*</span></label>
                                <input asp-for="StockQuantity" class="form-control" type="number" />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsForSale" id="customSwitchEdit">
                                <label class="custom-control-label" for="customSwitchEdit">Sản phẩm này có bán lẻ cho khách hàng?</label>
                                <small class="form-text text-muted">Nếu tắt, sản phẩm chỉ được dùng nội bộ (Consumable).</small>
                            </div>
                        </div>

                        <div class="mt-4 d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary mr-2">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}