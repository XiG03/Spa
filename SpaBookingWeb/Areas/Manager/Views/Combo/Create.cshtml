@model SpaBookingWeb.ViewModels.Manager.ComboViewModel

@{
    ViewData["Title"] = "Thêm Combo Mới";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
        <h2 class="h3 mb-4 page-title">Thêm Combo Mới</h2>
        <div class="card shadow mb-4">
            <div class="card-header">
                <strong class="card-title">Thông tin Combo</strong>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="ComboName" class="control-label">Tên Combo <span
                                    class="text-danger">*</span></label>
                            <input asp-for="ComboName" class="form-control" placeholder="Nhập tên combo" />
                            <span asp-validation-for="ComboName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Price" class="control-label">Giá Combo (VNĐ) <span
                                    class="text-danger">*</span></label>
                            <input asp-for="Price" class="form-control" type="number" placeholder="0" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Phần chọn nhiều dịch vụ -->
                    <div class="form-group">
                        <label asp-for="SelectedServiceIds" class="control-label">Chọn các dịch vụ trong Combo <span
                                class="text-danger">*</span></label>
                        <select asp-for="SelectedServiceIds" asp-items="Model.AvailableServices"
                            class="form-control select2-multi" multiple="multiple" style="width: 100%;">
                        </select>
                        <span asp-validation-for="SelectedServiceIds" class="text-danger"></span>
                        <small class="form-text text-muted">Bạn có thể tìm kiếm và chọn nhiều dịch vụ cùng
                            lúc.</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label">Hình ảnh</label>
                        <div class="custom-file">
                            <input asp-for="ImageFile" class="custom-file-input" id="customFile" accept="image/*">
                            <label class="custom-file-label" for="customFile">Chọn ảnh...</label>
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                            placeholder="Mô tả chi tiết về combo này..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mt-4 d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary mr-2">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary">Lưu Combo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Script xử lý hiển thị tên file và khởi tạo Select2 -->
    <script>
        $(document).ready(function () {
            // Hiển thị tên file khi chọn ảnh
            $('.custom-file-input').on('change', function () {
                var fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').addClass("selected").html(fileName);
            });

            // Kích hoạt Select2 cho ô chọn nhiều dịch vụ
            $('.select2-multi').select2({
                theme: 'bootstrap4',
                placeholder: "--- Chọn các dịch vụ ---",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}