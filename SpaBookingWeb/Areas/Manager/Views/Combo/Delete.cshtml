@model SpaBookingWeb.Models.Combo

@{
    ViewData["Title"] = "Xóa Combo";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}


    <div class="row justify-content-center">
        <div class="col-12 col-xl-8">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading"><i class="fe fe-alert-triangle mr-2"></i>Cảnh báo!</h4>
                <p>Bạn đang thực hiện thao tác xóa Combo. Hành động này không thể hoàn tác và Combo này sẽ bị xóa vĩnh viễn khỏi hệ thống.</p>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header">
                    <strong class="card-title">Chi tiết Combo cần xóa</strong>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Cột hiển thị hình ảnh -->
                        <div class="col-md-4 mb-3">
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="@Model.Image" class="img-fluid rounded shadow-sm w-100" style="object-fit: cover; max-height: 250px;" alt="@Model.ComboName" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded w-100" style="height: 200px;">
                                    <span class="text-muted"><i class="fe fe-image fe-24 mr-2"></i>Không có ảnh</span>
                                </div>
                            }
                        </div>

                        <!-- Cột hiển thị thông tin -->
                        <div class="col-md-8">
                            <h3 class="mb-1">@Model.ComboName</h3>
                            <h4 class="text-success font-weight-bold mb-3">@Model.Price.ToString("N0") VNĐ</h4>
                            
                            <div class="mb-3">
                                <strong>Mô tả:</strong>
                                <p class="text-muted text-justify">@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả" : Model.Description)</p>
                            </div>
                            
                            <hr />
                            
                            <h5 class="mb-3">Dịch vụ bao gồm:</h5>
                            @if(Model.ComboDetails != null && Model.ComboDetails.Any())
                            {
                                <ul class="list-group list-group-flush mb-4 border rounded">
                                    @foreach(var detail in Model.ComboDetails)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span>
                                                <i class="fe fe-check text-primary mr-2"></i>
                                                @detail.Service?.ServiceName
                                            </span>
                                            @if(detail.Service != null)
                                            {
                                                <span class="badge badge-light border">@detail.Service.DurationMinutes phút</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted font-italic mb-4">Combo này chưa có dịch vụ nào.</p>
                            }

                            <!-- Form xác nhận xóa -->
                            <form asp-action="Delete" method="post" class="d-flex justify-content-end">
                                <input type="hidden" asp-for="ComboId" /> <!-- Binding ID cần xóa -->
                                
                                <a asp-action="Index" class="btn btn-secondary mr-2">
                                    <i class="fe fe-x mr-1"></i>Hủy bỏ
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fe fe-trash-2 mr-1"></i>Xác nhận Xóa
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
